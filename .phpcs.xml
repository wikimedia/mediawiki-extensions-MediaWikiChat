<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Arrays.DisallowLongArraySyntax.Found"></exclude>
		<exclude name="Generic.Files.LineLength.TooLong"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingParamName"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingParamTag"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingReturn"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingDocumentationPublic"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.NotPunctuationReturn"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortBoolReturn"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.ParamNameNoMatch"></exclude>
		<exclude name="MediaWiki.Commenting.FunctionComment.NotPunctuationParam"></exclude>
		<exclude name="MediaWiki.ExtraCharacters.ParenthesesAroundKeyword.ParenthesesAroundKeywords"></exclude>
		<exclude name="MediaWiki.WhiteSpace.OpeningKeywordParenthesis.WrongWhitespaceBeforeParenthesis"></exclude>
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment"></exclude>
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.SingleSpaceBeforeSingleLineComment"></exclude>
		<exclude name="MediaWiki.WhiteSpace.SpaceyParenthesis.SingleSpaceBeforeCloseParenthesis"></exclude>
		<exclude name="MediaWiki.WhiteSpace.SpaceyParenthesis.SpaceBeforeOpeningParenthesis"></exclude>
		<exclude name="PSR2.Files.EndFileNewline.NoneFound"></exclude>
		<exclude name="Squiz.Classes.SelfMemberReference.NotUsed"></exclude>
		<exclude name="Squiz.Scope.MethodScope.Missing"></exclude>
	</rule>
	<file>.</file>
	<arg name="bootstrap" value="./vendor/mediawiki/mediawiki-codesniffer/utils/bootstrap-ci.php"/>
	<arg name="extensions" value="php,php5,inc"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>